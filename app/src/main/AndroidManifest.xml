<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shubham.pnbapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".ForgotPin" />
        <activity android:name=".EmpStart" />
        <activity android:name=".AdminStart" />
        <activity android:name=".UserInfo" />
        <activity android:name=".FillDetails" />
        <activity android:name=".MarkAttendance"
            android:parentActivityName=".EmpStart"/>
        <activity android:name=".ViewAttendance" />
        <activity android:name=".Attendance"
            android:parentActivityName=".EmpStart"/>
        <activity android:name=".Holiday"
            android:parentActivityName=".EmpStart"/>
        <activity android:name=".LeaveRequest"
            android:parentActivityName=".EmpStart"/>
        <activity android:name=".Response"
            android:parentActivityName=".AdminStart"/>
        <activity android:name=".CreateUser"
            android:parentActivityName=".AdminStart"/>
        <activity android:name=".AnyRequest"
            android:parentActivityName=".AdminStart"/>
        <activity android:name=".ViewEmployee"
            android:parentActivityName=".AdminStart"/>
        <activity android:name=".AdminAttendanceView" />
        <activity android:name=".MakeAttendance"></activity>
    </application>

</manifest>